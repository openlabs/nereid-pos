<tryton>
  <data>
    <record model="ir.ui.view" id="pos_payment_mode_view_form">
        <field name="model">pos.sale.payment_mode</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
          <![CDATA[
            <form string="Payment Mode">
              <label name="name" />
              <field name="name" />
              <label name="journal" />
              <field name="journal" />
              <label name="processor" />
              <field name="processor" />
              <label name="stripe_api_key" />
              <field name="stripe_api_key" />
            </form>
          ]]>
        </field>
      </record>

      <record model="ir.ui.view" id="pos_payment_mode_view_tree">
        <field name="model">pos.sale.payment_mode</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
          <![CDATA[
            <tree string="Payment Mode">
              <field name="name" />
              <field name="journal" />
              <field name="processor" />
            </tree>
          ]]>
        </field>
      </record>

      <record model="ir.action.act_window" id="act_pos_payment_mode_form">
        <field name="name">Payment Mode</field>
        <field name="res_model">pos.sale.payment_mode</field>
      </record>

      <record model="ir.action.act_window.view"
        id="act_pos_payment_mode_form_view1">
        <field name="sequence" eval="10"/>
        <field name="view" ref="pos_payment_mode_view_tree"/>
        <field name="act_window" ref="act_pos_payment_mode_form"/>
      </record>

      <record model="ir.action.act_window.view" 
        id="act_pos_payment_mode_form_view2">
        <field name="sequence" eval="20" />
        <field name="view" ref="pos_payment_mode_view_form" />
        <field name="act_window" ref="act_pos_payment_mode_form" />
      </record>
 
      <menuitem parent="sale.menu_configuration" sequence="20"
        id="menu_payment_mode" action="act_pos_payment_mode_form" />

  </data>
</tryton>
